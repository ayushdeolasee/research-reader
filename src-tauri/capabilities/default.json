{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "fs:default",
    {
      "identifier": "fs:allow-read-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$TEMP/**" },
        { "path": "/var/folders/**" },
        { "path": "/tmp/**" }
      ]
    },
    {
      "identifier": "fs:allow-write-file",
      "allow": [
        { "path": "$HOME/**" },
        { "path": "$DOWNLOAD/**" },
        { "path": "$DOCUMENT/**" },
        { "path": "$DESKTOP/**" },
        { "path": "$TEMP/**" },
        { "path": "/var/folders/**" },
        { "path": "/tmp/**" }
      ]
    },
    "fs:allow-exists",
    "fs:allow-mkdir"
  ]
}
